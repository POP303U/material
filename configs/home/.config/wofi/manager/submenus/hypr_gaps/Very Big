#!/bin/sh

sed -i 's|gaps_in.*|gaps_in = 10| ' ~/.config/hypr/hyprland.conf
sed -i 's|gaps_out.*|gaps_out = 25| ' ~/.config/hypr/hyprland.conf
sed -i 's|gaps-in.*|gaps-in = 10| ' ~/.config/material/config
sed -i 's|gaps-out.*|gaps-out = 25| ' ~/.config/material/config

touch ~/.config/hypr/hyprland.conf
