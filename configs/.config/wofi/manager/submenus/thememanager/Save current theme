#!/bin/sh

#LAUNCHER="wofi"
LAUNCHER="fuzzel"

NAME=$(dir -1 $HOME/.config/material/themes | $LAUNCHER --dmenu -i -p "Enter name for your saved theme: ")
CHOICE=$(dir -1 $HOME/.config/wofi/manager/submenus/thememanager/confirm | $LAUNCHER --dmenu -i -p "Save current theme with name: '$NAME'")

[[ "$CHOICE" == "Yes" ]] && cp $HOME/.config/material/config $HOME/.config/material/themes/$NAME
[[ "$CHOICE" == "Yes" ]] && echo -e "\n### Autogenerated theme name based on filename ###" >> $HOME/.config/material/themes/$NAME
[[ "$CHOICE" == "Yes" ]] && echo "config-current = ""$(basename $HOME/.config/material/themes/$NAME)" >> $HOME/.config/material/themes/$NAME

