#!/bin/sh

CONF_DIR="/home/${USER}/.config"
THEME_RICE="$(cat "${CONF_DIR}/swww/current/rice")"
WAYBAR_RICE="$(cat "${CONF_DIR}/waybar/current/rice")"
TRANSITION_TYPE="$(cat "${CONF_DIR}/swww/current/transition")"
CURSOR="$(grep "Gtk/CursorThemeName" "${CONF_DIR}/xsettingsd/xsettingsd.conf" | awk '{print $2}' | tr -d =\"= )"
WALLPAPER="$(cat "${CONF_DIR}/swww/current/name")"
GTK_THEME="$(grep -m 1 "=" "${CONF_DIR}/gtk-3.0/settings.ini" | tail -n 1 | awk -F '=' '{print $2}')"
GTK_ICONS="$(grep -m 2 "=" "${CONF_DIR}/gtk-3.0/settings.ini" | tail -n 1 | awk -F '=' '{print $2}')"
QT_THEME="$(grep -m 3 "=" "${CONF_DIR}/qt5ct/qt5ct.conf" | tail -n 1 | awk -F '=' '{print $2}')"

BLACK='\033[01;30m'   # Black
RED___='\033[01;31m'   # Red
GREEN_='\033[01;32m'   # Green
YELLOW='\033[01;33m'   # Yellow
BLUE__='\033[01;34m'   # Blue
PURPLE='\033[01;35m'   # Purple
CYAN__='\033[01;36m'   # Cyan
WHITE_='\033[01;37m'   # White
BOLD__='\033[1m'   # White
RESET_='\033[00m'      # Reset

echo -e "${RESET_}
${PURPLE}       .              
${PURPLE}      / \                           __                     __
${PURPLE}     /   \         _______  _______/ /____  ____ ___  ____/ /
${PURPLE}    /^.   \      /  ___/ / / / ___/ __/ _ \/ __ \`__ \/ __  / 
${PURPLE}   /  .-.  \     (__  ) /_/ (__  ) /_/  __/ / / / / / /_/ /  
${CYAN__}  /  (   ) _\   /____/\__, /____/\__/\___/_/ /_/ /_/\__,_/   
${CYAN__} / _.~   ~._^\       /____/                                  
${CYAN__}/.^         ^.\ 
${WHITE} 
${WHITE} "

echo -e "${RED___}▉▉  |${RESET_} System Theme${BLACK} ....... ${RESET_}${BOLD__}${THEME_RICE}"
echo -e "${RED___}  ▉▉|${RESET_} Waybar Theme${BLACK} ....... ${RESET_}${BOLD__}${WAYBAR_RICE}"
echo -e "${WHITE_}▉▉  |${RESET_} Cursor${BLACK} ............. ${RESET_}${BOLD__}${CURSOR}"
echo -e "${WHITE_}  ▉▉|${RESET_} Wallpaper${BLACK} .......... ${RESET_}${BOLD__}${WALLPAPER}"
echo -e "${BLUE__}▉▉  |${RESET_} GTK Theme${BLACK} .......... ${RESET_}${BOLD__}${GTK_THEME}"
echo -e "${BLUE__}  ▉▉|${RESET_} GTK Icons${BLACK} .......... ${RESET_}${BOLD__}${GTK_ICONS}"
echo -e "${YELLOW}▉▉  |${RESET_} Qt5 Theme${BLACK} .......... ${RESET_}${BOLD__}${QT_THEME}"
echo -e "${YELLOW}  ▉▉|${RESET_} Swww Transition${BLACK} .... ${RESET_}${BOLD__}${TRANSITION_TYPE}\n"
